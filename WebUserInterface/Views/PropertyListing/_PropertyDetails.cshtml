@model PropertyModel
@{
    
}

<div>
    <h4>@Model.Name</h4>
    <p>@Model.Blurb</p>
    <p>@Model.Location</p>
    <p>@Model.CostPerNight</p>
    <p>@Model.Decription</p>
    <p>
        @foreach (var item in Model.Amenities)
        {
            <span><b>@item.Name</b></span>
        }
    </p>
    @if (Model.Booking is not null)
    {
        @for (int i = 0; i < Model.Booking.Count; i++)
        {
            <p hidden id="start/@i">@Model.Booking[i].Start.ToString("yyyy'-'MM'-'dd")</p>
            <p hidden id="end/@i">@Model.Booking[i].End.ToString("yyyy'-'MM'-'dd")</p>
        }
    }
</div>
