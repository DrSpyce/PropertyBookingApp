@model PropertyDetailsModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div>
    <h4>@Model.Name</h4>
    <p>@Model.Blurb</p>
    <p>@Model.Location</p>
    <p>@Model.CostPerNight</p>
    <p>@Model.Decription</p>
    <p>
    @foreach(var item in Model.Amenities)
    {
            <span><b>@item</b></span>
    }
    </p>
    @if(Model.BookedDates is not null)
    {
        <p>Booking start date: @Model.BookedDates[0].ToString("dd/mm/yyyyy")</p>
        <p>Booking end date: @Model.BookedDates[1].ToString("dd/mm/yyyyy")</p>
    }
</div>